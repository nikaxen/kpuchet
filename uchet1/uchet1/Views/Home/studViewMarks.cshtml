@model IEnumerable<uchet1.Models.Mark>

@{
    ViewBag.Title = "Просмотр оценок студента";
}

<h2>@ViewData["this_view_title"]</h2>

<p>
    @Html.ActionLink("Все оценки", "Index") | 
    @Html.ActionLink("Неудовлетворительные оценки", "BadMarksOnly")
</p>
@if (Model.Count()==0)
{
    <b>Нет данных для показа</b>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.statement_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subject_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.themark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_fio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.statement_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subject_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_fio)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "MarkDetails", new { markid = item.id_mark })
        </td>
    </tr>
}

</table>
}